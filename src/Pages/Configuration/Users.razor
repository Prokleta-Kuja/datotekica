@attribute [Microsoft.AspNetCore.Components.RouteAttribute(C.Routes.UsersConfiguration)]

@if (_unauthorized)
{
    <RedirectTo Url=@C.Routes.Forbidden Force />
}
else
{
<PageTitle>User configuration</PageTitle>

<h1>Users</h1>

<div class="row">
    <div class="col-lg-6 order-lg-2">
        @if (_create != null)
        {
            <legend>Add user</legend>
            <form @onsubmit=SaveCreateClicked>
                <TextBox For=@nameof(UserCreateModel.Username) Label=Username @bind-Value=_create.Username Errors=_errors
                Required AutoFocus />
                <TextBox For=@nameof(UserCreateModel.TimezoneId) Label=Timezone @bind-Value=_create.TimezoneId Errors=_errors
                Required />
                <TextBox For=@nameof(UserCreateModel.LocaleId) Label=Locale @bind-Value=_create.LocaleId Errors=_errors
                Required />

                <button type="submit" class="btn btn-primary">Add</button>
                <button type="reset" class="btn btn-outline-danger" @onclick=Clear>Cancel</button>
            </form>
        }
        else if (_edit != null)
        {
            <legend>Edit @_edit.Username</legend>
            <form @onsubmit=SaveEditClicked>
                <TextBox For=@nameof(UserEditModel.Username) Label=Username @bind-Value=_edit.Username Errors=_errors
                Required AutoFocus />
                <TextBox For=@nameof(UserEditModel.TimezoneId) Label=Timezone @bind-Value=_edit.TimezoneId Errors=_errors
                Required />
                <TextBox For=@nameof(UserEditModel.LocaleId) Label=Locale @bind-Value=_edit.LocaleId Errors=_errors
                Required />
                <Switch For=@nameof(UserEditModel.IsDeleted) Label=Disabled @bind-Value=_edit.IsDeleted Errors=_errors />

                <button type="submit" class="btn btn-primary">Save</button>
                <button type="reset" class="btn btn-outline-danger" @onclick=Clear>Cancel</button>
            </form>
        }
        else
        {
            <div class="alert alert-info">Add or create</div>
        }
    </div>
    <div class="col-lg-6 order-lg-1">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Timezone</th>
                        <th>Locale</th>
                        <th class="text-end">
                            <button class="btn btn-primary" @onclick=AddClicked>Add</button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in _list)
                    {
                        <tr @key=item.UserId>
                            <td class="user-select-all">@item.UsernameNormalized</td>
                            <td class="user-select-all">@item.TimezoneId</td>
                            <td class="user-select-all">@item.LocaleId</td>
                            <td class="text-end">
                                <button class="btn btn-secondary" @onclick=@(()=>EditClicked(item))>Edit</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}