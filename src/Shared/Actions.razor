<InputFile id=upload class=d-none OnChange=UploadFiles multiple />
@if (_cts != null)
{
    var percentage = _transferedBytes / _totalBytes * 100d;
    <div class="progress mt-2">
    <div class="progress-bar" style="width: @percentage%;">@percentage.ToString("0")%</div>
</div>
}
else if (Selected?.Any() ?? false)
{
    <div class="list-group sticky-top">
    <button class="list-group-item list-group-item-action pointer p-0 d-flex" @onclick=Download>
        <i class="bi bi-file-earmark-zip p-2 text-primary"></i>
        <div class="py-2">Download</div>
    </button>
    <button @onclick=DeselectAll
        class="list-group-item list-group-item-action pointer p-0 d-flex justify-content-between align-items-center">
        <i class="bi bi-check-all p-2"></i>
        <div class="py-2 flex-grow-1">Deselect</div>
        <div class="p-2"><span class="badge bg-primary rounded-pill">@Selected.Count</span></div>
    </button>
    @if (CanWrite)
        {
            <button class="list-group-item list-group-item-action pointer p-0 d-flex" @ondblclick=DeleteSelected
        title="Double click to delete">
                <i class="bi bi-trash3 p-2 text-danger"></i>
                <div class="py-2">Delete</div>
            </button>
        }
    </div>
}
else
{
    <div class="list-group sticky-top">
    <button type="button" class="list-group-item list-group-item-action" disabled>Click item icon to select</button>
    @if (CanWrite)
        {
            <label for=upload hidden=@(_creatingDir) class="list-group-item list-group-item-action p-0">
                <div class="pointer d-flex">
                    <i class="bi bi-file-earmark-arrow-up text-success p-2"></i>
                    <div class="py-2">Upload file(s)</div>
                </div>
            </label>

            <button hidden=@(_creatingDir) class="list-group-item list-group-item-action pointer p-0 rounded-bottom"
        @onclick=OpenCreateDirectory>
                <div class="d-flex">
                    <i class="bi bi-folder-plus text-success p-2"></i>
                    <div class="py-2">Create directory</div>
                </div>
            </button>

            <form @onsubmit=CreateDirectory hidden=@(!_creatingDir)>
        <div class="input-group">
            <input @ref=_newDirRef type="text" class="form-control list-group-item" placeholder="New directory name"
                @bind=_newDirName @onblur=CloseCreateDirectory>
            <button class="btn btn-outline-success" type="submit" style="border-top-right-radius: 0;">
                <i class="bi bi-folder-plus"></i>
            </button>
        </div>
    </form>
        }
    </div>
}